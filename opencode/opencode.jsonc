{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "coder",
  "model": "github-copilot/gpt-4.1",
  "theme": "tokyonight",
  "instructions": [
    "CONTRIBUTING.md",
    "docs/guidelines.md"
  ],
  "agent": {
    "coder": {
      "description": "Main coding and refactoring agent. Pragmatic, follows project conventions.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.1,
      "tools": { "write": true, "edit": true, "bash": true }
    },
    "coder-pro": {
      "description": "Debugs and fixes code, runs tests, applies vetted bug fixes.",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.1,
      "tools": { "write": true, "edit": true, "bash": true }
    },
    "debugger": {
      "description": "Debugs and fixes code, runs tests, applies vetted bug fixes.",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.15,
      "tools": { "write": true, "edit": true, "bash": true }
    },
    "reviewer": {
      "description": "Reviews for pragmatism, best practices, and repo conventions. Explains complex changes clearly.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.09,
      "tools": { "write": false, "edit": false, "bash": false }
    },
    "brainstorm": {
      "description": "Idea partner and brainstorming agent for technical and product exploration.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.33,
      "tools": { "write": false, "edit": false, "bash": false }
    }
  }
}
